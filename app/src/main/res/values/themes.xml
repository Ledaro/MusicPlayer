    <style name="ThemeOverlay.Catalog.MusicPlayer.Player" parent="">
        <item name="colorPrimary">@color/cat_music_player_primary</item>
    </style>

    <style name="Widget.Catalog.MusicPlayer.Player.Button" parent="Widget.Material3.Button.TextButton.Icon">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="iconPadding">0dp</item>
        <item name="iconTint">?attr/colorPrimary</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Catalog.MusicPlayer.Player.Button</item>
    </style>

    <style name="ShapeAppearanceOverlay.Catalog.MusicPlayer.Player.Button" parent="">
